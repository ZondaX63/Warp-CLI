{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "warp-cli",
          "cmd": "warp-cli",
          "args": [
            "connect",
            "disconnect",
            "status",
            "settings",
            "mode"
          ]
        }
      ]
    }
  ]
}